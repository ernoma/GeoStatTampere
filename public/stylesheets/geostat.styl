	padding-right 10px

#area_buttons_div
	float right

.top-buffer
	margin-top 1em
	
.map_box_control
	position relative
	float left
	background #fff
	color #1978cf
	-moz-border-radius 4px
	-webkit-border-radius 4px
	border-radius 4px
	background-color rgba(255, 255, 255, 0.8)
	z-index 1000
	box-shadow 0 1px 7px rgba(0,0,0,0.65)
	margin-left 10px
	margin-top 10px

.map_box_control_locate_button {
	display:block;
	float:left;
	width:26px;
	height:26px;	
	background: url('../images/geo_locate_4.png') no-repeat 3px 2px;
	border-radius:4px;
}
.map_box_control_locate_button:hover {
	background: url('../images/geo_locate_4.png') no-repeat 3px -21px;
}