
html,body
	width 100%
	height 100%

body
	margin 0
	overflow hidden

h2
	font medium sans-serif

p
	margin 0

#webgl
	margin-left auto
	margin-right auto
	width 100%
	height 600px

#legend
	border 1px
	width 20%
	height 15%
	position absolute
	right 0px

#time_view
	visibility hidden
	overflow auto
	font small sans-serif
	height 300px

.ui-widget
	font small sans-serif

#time_scale_selection
	float left
	margin-left 20px
	font small sans-serif

//#datepicker
//	margin-bottom 20px

#hours_slider
	margin 20px
	margin-top 0px	

#date_slider
	margin 20px
	margin-top 0px

.animate_buttons
	margin-top 20px

#chart
	float right
	width 500px
	height 250px

.axis path,
.axis line
	fill none
	stroke #000
	shape-rendering crispEdges

.axis, .legend
	font small sans-serif

//.x.axis path
//	display none

#time_scale_tabs
	width 500px

#info
	color #000
	position absolute
	top 0px
	width 100%
	padding 5px
	text-align center

#loading
	position absolute
	top 50%
	width 100%
	height 100%
	
#loading_text
	color #000
	position relative
	margin 40px
	text-align center
	
#attribution
	position fixed
	bottom 0
	right 0
	margin-right 10px
	text-align right
	font-size small
